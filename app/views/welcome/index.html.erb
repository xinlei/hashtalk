<div id="main">
  <div id="input_area">
    <table id="input_table">
      <tr>
        <td colspan="2">
          <%= form_tag do %>
              <textarea class="form-control" id="message" name="message" cols="50" rows="5"></textarea>
        </td>
              </tr>
              <tr>
                <td id="character_counter"></td>
                <td class="align_right"><button type= "submit" class="btn btn-default">Post</button></td>
              </tr>
          <% end %>
    </table>
  </div>
  <div id="display_area">
    <div id="search_results">
        <%= render 'tiks/tiks', :tiks => @tiks %>
    </div>
  </div>


<%= form_tag("index", method: "get", id: 'add_form') do %>
    <%= label_tag(:q, "Add to search list:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
<% end %>

<h1>Search List</h1>
<div id='staging_area'>
</div>

<%= form_tag('/search', method: "post", id: 'search_form', format: :json, remote: true) do %>
    <%= submit_tag("Search") %>
<% end %>

<br>

<%= form_tag('/search', method: "delete", id: 'delete_form') do %>
    <%= submit_tag("Delete") %>
<% end %>
</div>